.g-newt-login
  .container
    .row
      .col-md-4.col-md-offset-4.col-sm-8.col-sm-offset-2
          .login-panel.panel.panel-default
            .panel-heading
              h3.panel-title Sign in with NERSC account
            .panel-body
              form(role='form').login
                fieldset
                  .form-group
                    input.form-control(placeholder='Username', name='username', type='text', autofocus='')
                  .form-group
                    input.form-control(placeholder='Password', name='password', type='password', value='')
                  button.btn.btn-sm.btn-success(type='submit', disabled=loading) Load
                  span(class='info')
                  if loading 
                    i(class="icon-spin6 animate-spin")
                  if authFailed
                    span(class='text-danger') Authentication failed
